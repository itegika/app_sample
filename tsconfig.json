{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions":{
    "baseUrl": ".",
    "paths": {
       "*": ["src/*"],
      "@navigation/*": ["src/navigation/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@services/*": ["src/services/*"],
      "@screens/*": ["src/screens/*"],
      "@src-types/*": ["src/types/*"],
      "@context/*": ["src/context/*"],
      "@helpers/*": ["src/helpers/*"],
      "@hooks/*": ["src/hooks/*"],
      "assets/*": ["assets/*"]
    },      
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],

}
